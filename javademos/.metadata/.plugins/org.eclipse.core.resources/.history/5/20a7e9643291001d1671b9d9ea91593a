
public class main {

	public static void main(String[] args) {
		// 6 --->1.2.3
		// 28--->1.2.4.7.14

		int number = 0;
		int total = 28;

		if (number == 0) {
			System.out.println("Mükemmel Sayı Değildir");
			return;
		}

		for (int i = 1; i < number; i++) {
			if (number % i == 0) {
				total = total + i;

			}

		}

		if (total == number) {
			System.out.println("Mükemmel Sayıdır.");

		}

		if (number < 0) {
			System.out.println("Negatif Sayılar Kaideye Alınmamaktadır");
		}

		else {
			System.out.println("Mükemmel Sayı Değildir.");
		}

	}

}
